# .env.example - Example environment configuration
# Copy this to .env and update with your values

# Application
APP_NAME=myapp
APP_ENV=development
APP_PORT=8080

# Database
DATABASE_URL=postgres://user:password@localhost:5432/myapp?sslmode=disable

# Docker
DOCKER_REGISTRY=docker.io/myorg

# Build
GO_BUILD_TAGS=dev
VERBOSE=false

# Testing
TEST_RACE=true
FUZZ_TIME=10s
BENCH_TIME=10s

# Tools
GOLANGCI_LINT_VERSION=v1.55.2

# Deployment
DEPLOY_SERVER_DEV=dev-server.example.com
DEPLOY_SERVER_STAGING=staging-server.example.com
DEPLOY_SERVER_PROD=prod-server.example.com
